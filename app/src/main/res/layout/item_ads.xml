<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:id="@+id/cv_itemAds_parent"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp"
    android:elevation="32dp"
    android:layout_marginBottom="8dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/imv_itemAds_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            app:sriv_left_top_corner_radius="16dp"
            app:sriv_right_top_corner_radius="16dp" />

        <TextView
            android:gravity="center_horizontal"
            android:minLines="2"
            android:maxLines="2"
            android:id="@+id/txt_itemAds_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_itemAds_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textColor="@color/gray_700"
            android:textSize="14sp"
            tools:text="samand jaufias adsvkfvhjdfvdfbghj" />


        <TextView
            android:maxLines="1"
            android:id="@+id/txt_itemAds_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_itemAds_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            tools:text="samand jaufias adsvkfvhjdfvdfbghj" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>