<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_itemAds_parent"
    android:elevation="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:layoutDirection="rtl"
    >



    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/imv_itemAds_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        app:sriv_left_top_corner_radius="16dp"
        app:sriv_right_top_corner_radius="16dp" />

    <TextView

        android:id="@+id/txt_itemAds_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/gray_700"
        android:textSize="14sp"
        tools:text="samand jaufias adsvkfvhjdfvdfbghj" />


    <TextView
        android:id="@+id/txt_itemAds_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemAds_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="1"
        android:textColor="@color/gray_500"
        android:textSize="12sp"
        tools:text="samand jaufias adsvkfvhjdfvdfbghj" />



</RelativeLayout>